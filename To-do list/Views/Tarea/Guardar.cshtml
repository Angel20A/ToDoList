@model To_do_list.Models.ViewModel.TareaModel
@{
    ViewData["Title"] = "Guardar";
}
<head>
    <title>Crear tarea</title>
</head>
<p>@ViewBag.message</p>
<div class="container">
    <div clas="col-md-4">
        <div class="col-8 offset-2">

            <form asp-controller="Tarea" asp-action="Guardar" enctype="multipart/form-data" method="post">
                <div class="mb-3">
                    @* Nombre *@
                    <label asp-for="Nombre" class="form-label"></label>
                    <input asp-for="Nombre" class="form-control" />
                    <span asp-validation-for="Nombre" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    @* FechaVencimiento *@
                    <label asp-for="FechaVencimiento" class="form-label"></label>
                    <input asp-for="FechaVencimiento" class="form-control" type="date" />
                    <span asp-validation-for="FechaVencimiento" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    @* HoraVencimiento *@
                    <label asp-for="HoraVencimiento" class="form-label"></label>
                    <input asp-for="HoraVencimiento" class="form-control" type="time" />
                    <span asp-validation-for="HoraVencimiento" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Descripcion" class="form-label"></label>
                    <input asp-for="Descripcion" class="form-control" style="" type="text" />
                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="Archivo" class="form-label"></label>
                    <input asp-for="Archivo" type="file" class="btn btn-light"/>
                </div>

                <input type="submit" value="Guardar" class="btn btn-primary" />
            </form>
        </div>
    </div>
</div>
